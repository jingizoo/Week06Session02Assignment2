<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jalaj.firstapp.fragmenttextviewdemo.MainActivity"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.jalaj.firstapp.fragmenttextviewdemo.FragmentSender"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="11dp"
        android:id="@+id/fragment_sender" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.jalaj.firstapp.fragmenttextviewdemo.FragmentReceiver"
        android:id="@+id/fragment_receiver"
        />

</LinearLayout>
